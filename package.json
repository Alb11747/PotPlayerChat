{
  "name": "potplayerchat",
  "version": "1.0.0",
  "description": "A PotPlayer companion chat application.",
  "main": "./out/main/index.js",
  "author": "Alb11747",
  "homepage": "https://github.com/Alb11747/PotPlayerChat",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint --fix --cache --max-warnings=0 .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "svelte-check": "svelte-check --fail-on-warnings --tsconfig ./tsconfig.web.json",
    "typecheck": "npm run typecheck:node && npm run typecheck:web && npm run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps && patch-package",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,svelte}": [
      "eslint --fix --cache --max-warnings=0",
      "prettier --plugin prettier-plugin-svelte --write"
    ]
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@mkody/twitch-emoticons": "^2.9.2",
    "@twurple/api": "^7.3.0",
    "@twurple/auth": "^7.3.0",
    "@twurple/chat": "^7.3.0",
    "async-lock": "^1.4.1",
    "binary-searching": "^2.0.5",
    "bloom-filters": "^3.0.4",
    "electron-conf": "^1.3.0",
    "electron-context-menu": "^4.1.0",
    "electron-updater": "^6.6.2",
    "koffi": "^2.12.0",
    "node-cache": "^5.1.2",
    "patch-package": "^8.0.0",
    "regedit": "^5.1.4",
    "sanitize-html": "^2.17.0",
    "tasklist": "^5.0.0",
    "virtua": "^0.41.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@swc/core": "^1.12.7",
    "@tailwindcss/vite": "^4.1.11",
    "@types/async-lock": "^1.4.2",
    "@types/node": "^24.0.7",
    "@types/sanitize-html": "^2.16.0",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "eslint": "^9.30.0",
    "eslint-plugin-svelte": "^3.11.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.34.9",
    "svelte-check": "^4.3.0",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "cross-env": "^7.0.3"
  }
}
